<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/ProfileFragUserForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProfileFragUserPic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    tools:src="@drawable/nazar" />

                <TextView
                    android:id="@+id/ProfileFragUsername_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="cloudlevi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ProfileFragUsername_tv"
                    android:layout_centerHorizontal="true"
                    android:text="@string/show_my_profile"
                    android:textColor="@color/PlainTextColor2"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/arrow_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_right_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="8dp"
                android:text="@string/account_settings"
                android:textColor="@color/PlainTextColor2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/ProfileFrag_Email_Form"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/email"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ProfileFragEmail_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="15sp"
                    tools:text="nazar_prokudin@mail.ru" />

                <ImageView
                    android:id="@+id/arrow_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_right_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/ProfileFrag_Pass_Form"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/password"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ProfileFrag_Pass_tv"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/PlainTextColor2"
                    android:textSize="15sp"
                    android:text="@string/click_to_change"/>

                <ImageView
                    android:id="@+id/arrow_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_right_24dp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/ProfileFrag_Edit_Form"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_right_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/space6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profilePicBTN"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/update_profile_picture"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="8dp"
                android:text="@string/app_settings"
                android:textColor="@color/PlainTextColor2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/space7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/ProfileFrag_Theme_Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/theme"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ProfileFragTheme_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/PlainTextColor"
                    android:textSize="15sp"
                    android:text="@string/appThemeTV"/>

                <ImageView
                    android:id="@+id/arrow_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_right_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/space8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/BarColor"
                android:orientation="horizontal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/logoutbtn"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/logout"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/deletebtn"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/delete_account"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


</LinearLayout>