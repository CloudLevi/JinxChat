<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/market_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/PlainTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="TITLE text" />

    <LinearLayout
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/BarColor"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/market_item_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="8dp"
        tools:src="@drawable/sample_picture" />

    <LinearLayout
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/BarColor"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/market_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/PlainTextColor"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="500$" />

    <TextView
        android:id="@+id/market_item_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/PlainTextColor"
        android:textSize="20sp"
        tools:text="Supreme" />

    <TextView
        android:id="@+id/market_item_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/PlainTextColor"
        android:textSize="20sp"
        tools:text="Almost New" />

    <LinearLayout
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/BarColor"
        android:orientation="horizontal" />

</LinearLayout>